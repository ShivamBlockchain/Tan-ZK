# Network name (can be custom if you want, keep "mainnet" for binaries compatibility)
ZKEVM_NETWORK="custom"

# URL of your L1 Ethereum node (Nethermind)
ZKEVM_NODE_ETHERMAN_URL="http://161.97.89.79:8545"

# Persistent storage paths for Postgres databases
ZKEVM_NODE_STATEDB_DATA_DIR="/var/lib/zkevm/statedb"
ZKEVM_NODE_POOLDB_DATA_DIR="/var/lib/zkevm/pooldb"

# Optional advanced config (uncomment if needed)
# ZKEVM_ADVANCED_CONFIG_DIR="/var/lib/zkevm/config"

# Custom Chain ID for your network
CHAIN_ID=2334

# Data directory for zkevm node state (blocks, logs)
DATA_DIR="/var/lib/zkevm/node-data"

# Logging level (optional)
LOG_LEVEL="info"
